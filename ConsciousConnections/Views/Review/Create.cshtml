@model ConsciousConnections.Models.ReviewCreate

@{
    ViewBag.Title = "Create";
}
<div class="col-12">
    <h2>Create Review</h2>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group text-center">
        @Html.LabelFor(model => model.Rating)
        <div class="col-6 offset-3">
            @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        @Html.LabelFor(model => model.ReviewDescription)
        <div class="col-6 offset-3">
            @Html.EditorFor(model => model.ReviewDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReviewDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        @Html.LabelFor(model => model.ProductId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-6 offset-3">
            <div class="checkbox">
                @Html.DropDownListFor(x => x.ProductId, new SelectList(ViewBag.Products, "ProductId", "ProductName"))
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-12">
            <input type="submit" value="Create" class="btn btn-default btn-lg" />
        </div>
    </div>
</div>

    }
<div class="col-12">
    @Html.ActionLink("Back to Reviews", "Index", "Products", new { @class = "createlinkcolor" })
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
