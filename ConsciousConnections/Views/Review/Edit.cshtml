@model ConsciousConnections.Models.ReviewEdit

@{
    ViewBag.Title = "Edit";
}

<div class="col-12">
    <h2>Edit</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ReviewId)

    <div class="form-group text-center">
        @Html.LabelFor(model => model.Rating)
        <div class="col-md-6 offset-3">
            @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center">
        @Html.LabelFor(model => model.ReviewDescription)
        <div class="col-md-6 offset-3">
            @Html.TextAreaFor(model => model.ReviewDescription, new { @class = "form-control" })
            @*@Html.EditorFor(model => model.ReviewDescription, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.ReviewDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-12">
            <input type="submit" value="Save" class="btn btn-primary btn-lg" />
        </div>
    </div>
</div>
}

<div class="col-12">
    @Html.ActionLink("Back To Reviews", "Index", null, new { @class = "createlinkcolor" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
































