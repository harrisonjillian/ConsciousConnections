@model ConsciousConnections.Models.ProductDetail

@{
    ViewBag.Title = "Delete";
}

<div class="productinfo">
    <h2>Delete Product</h2>
    <h5>Are you sure you want to delete this product?</h5>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid content-row">
        <div class="row">
            <div class="col-sm-12 col-lg-8 offset-2">
                <div class="card h-100">
                    <div class="card">
                        <h2 class="card-title text-center" style="background-color: darkgoldenrod" ;>@Html.DisplayFor(modelItem => Model.ProductName)</h2>
                        <h4 class="card-title">@Html.DisplayFor(modelItem => Model.ProductDescription)</h4>
                        <p class="card-text">@Html.DisplayFor(modelItem => Model.Price) </p>
                        <p class="card-text">@Html.HiddenFor(modelItem => Model.CompanyId) </p>
                    </div>

                    <div class="card-footer mt-auto text-center" style="background-color: #ebedeb" ;>
                        @Html.ActionLink("Back to Products", "Index", new { @class = "actionlinkcolor" }, new { @class = "actionlinkcolor" })
                        @Html.ActionLink("Edit Product", "Edit", new { id = Model.ProductId }, new { @class = "actionlinkcolor" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary btn-large" />
        </div>
    </div>
}


